<%- include header %>
<div class="container" style="height : 100%">
    <h3 style="margin-top:20px"><%= laps[0].Name %></h3>
    <div class="row" style="margin-bottom: 25px">

        <div class="col-md-4">
            <img src=<%=laps[0].Src_img %> style="width: 85%; position: relative; left: 12px; top: 1px;">
        </div>
        <div class="col-md-5" style="margin-top:20px; font-size : 20px">
            <% var pri = laps[0].Price.toString().slice(-8,-6)+'.'+laps[0].Price.toString().slice(-6,-3) + '.' +laps[0].Price.toString().slice(-3)%>
            <h3><b><i><%=pri %></i></b></h3>
            <p><b>CPU: </b><%=laps[0].CPU%></p>
            <p><b>RAM: </b><%=laps[0].RAM%></p>
            <p><b>HDD: </b><%=laps[0].HDD%></p>
            <p><b>Màn hình: </b><%=laps[0].Display%></p>
            <p><b>VGA: </b><%=laps[0].VGA%></p>
            <% if (data == "Guest") { %>
            <button type="button" class="btn btn-success" onclick="them_guest()">Thêm vào danh sách so sánh</button>
            <% } else { %>
            <form method="post" action="/danhsach" style="display: inline;"> 
                <input type="hidden" name="id" value=<%= laps[0].id %> />
                <button class="btn btn-success">Thêm vào danh
                    sách
                    so sánh</button>
            </form>

            <% } %>
            <a href=<%=laps[0].Link_sp %> target="_blank"><button type="button" class="btn btn-info">Link
                    fptShop</button></a>
        </div>
        <div class="col-md-3" style="margin-top:20px; font-size : 20px">
            <h3><b>Điểm số CPS</b></h3>
            <p>80</p>
            <p>100</p>
        </div>
    </div>
    <h3> Các sản phẩm khác </h3>
    <div class="container">
        <div class="row">
            <% for(var i = 1 ; i < 5 ;i++) { %>
            <div class="col-md-3">
                <a href=<%="chi-tiet/" + laps[i].id + "/" + laps[i].Name.split(" ").join("-").split('/').join('-')%>
                    style="color:black"><img src=<%=laps[i].Src_img %>>
                    <p><%=laps[i].Name%></p>
                </a>
                <% var pri = laps[i].Price.toString().slice(-8,-6)+'.'+laps[i].Price.toString().slice(-6,-3) + '.' +laps[i].Price.toString().slice(-3)%>
                <h3><b><i><%=pri %></i></b></h3>

            </div>
            <% } %>
        </div>
    </div>

</div>
<script>
    function them_guest() {
        alert("Bạn cần đăng nhập để thực hiện chức năng này !!");
    }
</script>
<%- include footer %>